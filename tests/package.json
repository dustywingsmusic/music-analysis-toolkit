{
  "name": "music-modes-app-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Music Modes App",
  "scripts": {
    "test": "npm run test:unit && npm run test:component && npm run test:e2e",
    "test:unit": "vitest run unit --config config/vitest.config.mts",
    "test:component": "vitest run component --config config/vitest.config.mts",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "test:watch": "vitest --config config/vitest.config.mts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.mts",
    "test:visual": "playwright test --config config/playwright.config.ts --update-snapshots",
    "test:debug": "vitest --inspect-brk --config config/vitest.config.mts",
    "test:ui": "vitest --ui --config config/vitest.config.mts",
    "test:chord-logic": "vitest run unit/services/chord-logic.test.ts --config config/vitest.config.mts",
    "test:midi-detection": "vitest run component/midi/midi-detection-panel.test.tsx --config config/vitest.config.mts",
    "test:smart-detection": "playwright test e2e/smart-detection/unified-detection-system.spec.ts --config config/playwright.config.ts",
    "test:performance": "playwright test e2e/performance --config config/playwright.config.ts",
    "test:accessibility": "playwright test --grep 'accessibility' --config config/playwright.config.ts",
    "test:ci": "npm run test:unit && npm run test:component && npm run test:e2e -- --reporter=junit",
    "test:install": "npm install && playwright install",
    "test:setup": "npm run test:install && npm run test:build",
    "test:build": "tsc --noEmit --project tsconfig.json",
    "test:clean": "rm -rf reports/* coverage/*",
    "test:report": "npm run test:coverage && npm run test:e2e -- --reporter=html",
    "test:checklist": "node scripts/run-checklist-tests.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@vitest/ui": "^1.0.0",
    "@axe-core/playwright": "^4.8.0",
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "testing",
    "music",
    "midi",
    "react",
    "typescript",
    "playwright",
    "vitest"
  ],
  "author": "Music Modes App Team",
  "license": "MIT"
}
