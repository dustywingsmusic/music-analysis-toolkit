#!/bin/bash
# Pre-push hook for additional validation
# This runs slower checks that we don't want to block commits

set -e

echo "🚀 Running pre-push validation..."

# Run full validation
if ! ./bin/validate; then
    echo "❌ Pre-push validation failed. Push cancelled."
    echo "💡 Fix issues or use --no-verify to skip (not recommended)"
    exit 1
fi

echo "✅ Pre-push validation passed!"
